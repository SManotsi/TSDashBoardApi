@model TeksaHDashboard.Models.MeetingsViewModel

@{
    ViewData["Title"] = "Create Meeting";
}

<h1 class="text-center">Meeting Management</h1>

<div class="container mt-4">
    <h4 class="text-muted text-center">Fill in the details below:</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" placeholder="Enter Meeting Title" required />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Date" class="control-label"></label>
                            <input asp-for="Date" class="form-control" placeholder="Select Date" type="datetime-local" required />
                            <span asp-validation-for="Date" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Add Meeting" class="btn btn-primary btn-block" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-primary">Back to List</a>
    </div>
</div>

<style>
    body {
        background-color: #f4f4f4; /* Light background color */
    }

    h1 {
        background-color: gray;
        color: #fff;
        padding: 10px;
        text-align: center;
    }

    .card {
        border: none; /* No border for a clean look */
        margin-top: 20px;
    }

    .btn-primary {
        background-color: #007bff; /* Blue button color */
        border-color: #007bff; /* Consistent border color */
        color: white; /* Button text color */
    }

    .form-control {
        margin-bottom: 15px;
    }

    .text-center a {
        color: #007bff; /* Link color for back to list */
    }
</style>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
