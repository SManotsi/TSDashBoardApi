@model IEnumerable<TeksaHDashboard.Models.MeetingsViewModel>

@{
    ViewData["Title"] = "Index";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Meeting Management</title>
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <style>
        body {
            background-color: #f4f4f4; /* Light background */
            font-family: Arial, sans-serif;
        }

        h1 {
            background-color: gray;
            color: #fff;
            padding: 15px;
            text-align: center;
        }

        .container {
            margin-top: 20px;
        }

        .table {
            background-color: #fff; /* White background for table */
            margin-top: 20px;
            width: 100%; /* Full width */
        }

        th {
            background-color: #f8f8f8; /* Light gray background for table headers */
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

        .form-control {
            margin-bottom: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>Meeting Management</h1>

        <p class="text-center">
            <a asp-action="Create" class="btn btn-primary">Create New Meeting</a>
        </p>

        <input type="text" id="search" placeholder="Search for meetings..." class="form-control">

        <table class="table table-bordered table-responsive">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Date)
                    </th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Title)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date, "MM/dd/yyyy")
                        </td>
                        <td>
                            <div class="btn-group">
                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" })
                                @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
