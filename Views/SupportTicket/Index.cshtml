@model IEnumerable<TeksaHDashboard.Models.SupportTicketsViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">
    <h1 class="text-center">Support Tickets Management</h1>

    <p>
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table table-bordered mt-4">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().CustomerId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Subject)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().CreatedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().ResolvedDate)
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Subject)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ResolvedDate)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    body {
        background-color: #f4f4f4; /* Light background color */
        font-family: Arial, sans-serif; /* Consistent font */
    }

    h1 {
        background-color: gray; /* Gray background for header */
        color: #fff; /* White text */
        padding: 10px; /* Padding around header */
        text-align: center; /* Center align header text */
    }

    .table {
        margin-top: 20px; /* Space above table */
        background-color: #fff; /* White background for table */
    }

    th {
        background-color: #f8f8f8; /* Light gray background for table headers */
    }

    .btn-primary {
        background-color: #007bff; /* Blue button color */
        border-color: #007bff; /* Consistent border color */
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
