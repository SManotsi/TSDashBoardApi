@model TeksaHDashboard.Models.SupportTicketsViewModel

@{
    ViewData["Title"] = "Create";
}

<div class="container mt-4">
    <h1 class="text-center">Create Support Ticket</h1>

    <h4 class="text-muted text-center">Fill in the details below:</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="CustomerId" class="control-label"></label>
                    <input asp-for="CustomerId" class="form-control" placeholder="Enter Customer ID" required />
                    <span asp-validation-for="CustomerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Subject" class="control-label"></label>
                    <input asp-for="Subject" class="form-control" placeholder="Enter Subject" required />
                    <span asp-validation-for="Subject" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" placeholder="Enter Description" required />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Status" class="control-label"></label>
                    <input asp-for="Status" class="form-control" placeholder="Enter Status" required />
                    <span asp-validation-for="Status" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CreatedDate" class="control-label"></label>
                    <input asp-for="CreatedDate" class="form-control" type="date" required />
                    <span asp-validation-for="CreatedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ResolvedDate" class="control-label"></label>
                    <input asp-for="ResolvedDate" class="form-control" type="date" />
                    <span asp-validation-for="ResolvedDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-link">Back to List</a>
    </div>
</div>

<style>
    body {
        background-color: #f4f4f4; /* Light background color */
    }

    h1 {
        background-color: gray; /* Gray background for header */
        color: #fff; /* White text */
        padding: 10px; /* Padding around header */
        text-align: center; /* Center align header text */
    }

    .form-group {
        margin-bottom: 1.5rem; /* Increased space between form groups */
    }

    .btn-primary {
        background-color: #007bff; /* Blue button color */
        border-color: #007bff; /* Consistent border color */
        color: white; /* Button text color */
    }
</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
