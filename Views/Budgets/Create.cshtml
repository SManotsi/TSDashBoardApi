@model TeksaHDashboard.Models.BudgetsViewModel

@{
    ViewData["Title"] = "Create Budget";
}

<style>
    body {
        background-color: #f4f4f4; /* Light background color */
        font-family: Arial, sans-serif;
    }

    h1 {
        background-color: gray;
        color: #fff;
        padding: 10px;
        text-align: center;
    }

    .card {
        border: none; /* No border for a clean look */
        margin-top: 20px;
    }

    .btn-success {
        background-color: #007bff; /* Green button color */
        border-color: #007bff; /* Consistent border color */
        color: white; /* Button text color */
    }

    .btn-link {
        color: #007bff; /* Blue link color */
    }

    .text-muted {
        color: #6c757d; /* Muted text color */
    }
</style>

<div class="container mt-4">
    <h1 class="text-center">Create Budget</h1>

    <h4 class="text-muted text-center">Fill in the details below:</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                <div class="form-group">
                    <label asp-for="Department" class="control-label"></label>
                    <input asp-for="Department" class="form-control" placeholder="Enter Department" required />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FiscalYear" class="control-label"></label>
                    <input asp-for="FiscalYear" class="form-control" placeholder="Enter Fiscal Year" required />
                    <span asp-validation-for="FiscalYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AllocatedAmount" class="control-label"></label>
                    <input asp-for="AllocatedAmount" class="form-control" placeholder="Enter Allocated Amount" required />
                    <span asp-validation-for="AllocatedAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SpentAmount" class="control-label"></label>
                    <input asp-for="SpentAmount" class="form-control" placeholder="Enter Spent Amount" required />
                    <span asp-validation-for="SpentAmount" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-success btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-link">Back to List</a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
  }
