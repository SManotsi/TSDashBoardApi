@model IEnumerable<TeksaHDashboard.Models.BudgetsViewModel>

@{
    ViewData["Title"] = "Budgets Index";
}

<style>
    body {
        background-color: #f4f4f4; /* Light background color */
        font-family: Arial, sans-serif;
    }

    h1 {
        background-color: gray;
        color: #fff;
        padding: 10px;
        text-align: center;
    }

    .table {
        margin-top: 20px;
        background-color: #fff; /* White background for the table */
    }

    th {
        background-color: #f8f8f8; /* Light gray background for headers */
    }

    .btn-primary {
        background-color: #007bff; /* Blue button color */
        border-color: #007bff; /* Consistent border color */
        color: white; /* Button text color */
    }
</style>

<div class="container mt-4">
    <h1 class="text-center">Budgets Overview</h1>

    <p class="text-right">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().Department)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().FiscalYear)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().AllocatedAmount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().SpentAmount)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Department)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FiscalYear)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.AllocatedAmount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SpentAmount)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
