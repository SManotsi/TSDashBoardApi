@model TeksaHDashboard.Models.PerformanceReviewsViewModel

@{
    ViewData["Title"] = "Create";
}

<style>
    body {
        background-color: #f4f4f4; /* Light background color */
        font-family: Arial, sans-serif; /* Font style */
    }

    h1 {
        background-color: gray; /* Gray background for the header */
        color: #fff; /* White text */
        padding: 10px; /* Padding for the header */
        text-align: center; /* Center align the header text */
    }

    .container {
        margin-top: 20px; /* Top margin for the container */
    }

    .btn-primary {
        background-color: #007bff; /* Blue button color */
        border-color: #007bff; /* Border color matching the button */
        color: #fff; /* White text on the button */
    }
</style>

<div class="container mt-4">
    <h1 class="text-center">Create Performance Review</h1>

    <h4 class="text-muted text-center">Fill in the details below:</h4>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="StaffId" class="control-label"></label>
                    <input asp-for="StaffId" class="form-control" placeholder="Enter Staff ID" />
                    <span asp-validation-for="StaffId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReviewDate" class="control-label"></label>
                    <input asp-for="ReviewDate" class="form-control" type="date" />
                    <span asp-validation-for="ReviewDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Reviewer" class="control-label"></label>
                    <input asp-for="Reviewer" class="form-control" placeholder="Enter Reviewer Name" />
                    <span asp-validation-for="Reviewer" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Rating" class="control-label"></label>
                    <input asp-for="Rating" class="form-control" placeholder="Enter Rating" />
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Comments" class="control-label"></label>
                    <textarea asp-for="Comments" class="form-control" placeholder="Enter Comments"></textarea>
                    <span asp-validation-for="Comments" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary btn-block" />
                </div>
            </form>
        </div>
    </div>

    <div class="text-center mt-3">
        <a asp-action="Index" class="btn btn-link">Back to List</a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
