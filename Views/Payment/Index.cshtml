@model IEnumerable<TeksaHDashboard.Models.PaymentsViewModel>

@{
    ViewData["Title"] = "Index";
}

<style>
    body {
        background-color: #f4f4f4; /* Light background color */
        font-family: Arial, sans-serif; /* Font style */
    }

    h1 {
        background-color: gray; /* Gray background for the header */
        color: #fff; /* White text */
        padding: 10px; /* Padding for the header */
        text-align: center; /* Center align the header text */
    }

    .table {
        margin-top: 20px; /* Top margin for the table */
        background-color: #fff; /* White background for the table */
    }

    th {
        background-color: #f8f8f8; /* Light gray background for table headers */
    }

    .btn-primary {
        background-color: #007bff; /* Blue button color */
        border-color: #007bff; /* Border color matching the button */
        color: white; /* Button text color */
    }
</style>

<div class="container mt-4">
    <h1 class="text-center">Payments Overview</h1>

    <p class="text-right">
        <a asp-action="Create" class="btn btn-primary">Create New</a>
    </p>

    <table class="table table-striped table-bordered">
        <thead class="thead-light">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().InvoiceId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Amount)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().Method)
                </th>
                <th class="text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceId)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Method)
                    </td>
                    <td class="text-center">
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Details", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
